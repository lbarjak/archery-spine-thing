doctype html

head 
    link(href='http://cdnjs.cloudflare.com/ajax/libs/pure/0.3.0/pure-min.css' rel='stylesheet')
    link(href='/css/style.css' rel='stylesheet')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular.min.js' type='text/javascript')
    script(src='/js/app.js' type='text/javascript')
    title Archery Spine Measurement

body(ng-app='archeryApp')
    div.pure-g
        div#main-content.pure-u-1-2
            h24 Oh look, an artsy photo of arrows.
            p 
                img(src="/img/arrows.jpg" width='300')
            h2 Spine Calculator
            form.pure-form.pure-form-stacked(ng-controller='formCtrl')
                input(placeholder='draw length' ng-model='draw' type='text')
                input(placeholder='bow poundage' ng-model='pound' type='text')
                input(placeholder='point weight (grains)' ng-model='point' type='text')
                button.pure-button.pure-button-primary(ng-click='calculate()') Calculate
                button.pure-button.pure-button-primary(ng-click='clear()') Clear

                p(ng-show=('deflection != null')) arrow deflection: {{deflection}}
